project: pearsontechnology
environments:
  - name: sample-app-environment
    namespace: sample-app
    services:
      - name: front
        external_url: front.sample-app.domain
        ssl: false
        port: 80
        hpa:
          min_replicas: 1
          max_replicas: 5
          metric:
            name: cpu
            target_cpu_utilization_percentage: 75
        deployment:
          method: bluegreen
          active: blue
        env:
          - name: APP_PORT
            value: 80
          - name: BACK_END
            value: back.sample-app.svc.cluster.local
        limits:
          cpu: 500m
          memory: 100Mi
      - name: back
        port: 80
        replicas: 1
        deployment:
          method: bluegreen
          active: blue
        hpa:
          min_replicas: 1
          max_replicas: 5
          metric:
            name: cpu
            target_cpu_utilization_percentage: 75
        env:
          - name: APP_PORT
            value: 80
        requests:
           cpu: 100m
        limits:
           cpu: 500m
           memory: 100Mi
